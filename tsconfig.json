{
  "$schema": "https://www.schemastore.org/tsconfig.json",
  "extends": "@gfmio/tsconfig/library.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    },
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "noEmit": true,
    "module": "esnext"
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "benchmarks/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out"
  ]
}
