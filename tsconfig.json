{
  "$schema": "https://www.schemastore.org/tsconfig.json",
  "extends": "@gfmio/tsconfig/library.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "benchmarks/**/*",
    "examples/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out"
  ]
}
