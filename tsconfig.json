{
  "$schema": "https://www.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@tests/*": [
        "./tests/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "out"
  ],
  "extends": "@gfmio/tsconfig/library.json",
  "include": [
    "src/**/*",
    "tests/**/*",
    "benchmarks/**/*"
  ]
}
