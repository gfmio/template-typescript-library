{
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[graphql]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[html]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  // ===========================
  // Language-Specific Formatters
  // ===========================
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on"
  },
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide",
    "editor.formatOnSave": true
  },
  "[shellscript]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // ===========================
  // Biome Settings
  // ===========================
  "biome.configurationPath": "biome.json",
  "biome.lsp.bin": "node_modules/.bin/biome",

  // ===========================
  // Spell Checker Settings
  // ===========================
  "cSpell.enabled": true,
  "cSpell.ignorePaths": [
    "node_modules",
    "out",
    "dist",
    "coverage",
    ".devenv",
    ".direnv",
    ".task",
    "*.lock",
    "bun.lock"
  ],
  "cSpell.words": [
    "biomejs",
    "commitlint",
    "devenv",
    "direnv",
    "gfmio",
    "markdownlint",
    "nixos",
    "nixpkgs",
    "taplo",
    "taskfile",
    "toml",
    "tsup",
    "typedoc",
    "vitepress",
    "vitest",
    "yamllint"
  ],
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  // ===========================
  // Editor Settings
  // ===========================
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.guides.bracketPairs": true,
  "editor.insertSpaces": true,
  "editor.rulers": [
    80,
    120
  ],
  "editor.tabSize": 2,

  // ===========================
  // Error Lens Settings
  // ===========================
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],
  "errorLens.fontSize": "0.9em",
  "errorLens.fontWeight": "normal",

  // ===========================
  // ESLint Settings (JSDoc only)
  // ===========================
  "eslint.enable": true,
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // ===========================
  // TOML Settings
  // ===========================
  "evenBetterToml.formatter.alignEntries": false,
  "evenBetterToml.formatter.allowedBlankLines": 1,
  "evenBetterToml.formatter.arrayAutoCollapse": true,
  "evenBetterToml.formatter.arrayAutoExpand": true,
  "evenBetterToml.formatter.columnWidth": 100,
  "evenBetterToml.formatter.compactArrays": true,
  "evenBetterToml.formatter.compactInlineTables": false,
  "files.associations": {
    ".envrc": "shellscript",
    "*.json": "jsonc",
    "Taskfile.yml": "yaml"
  },

  // ===========================
  // Files Settings
  // ===========================
  "files.eol": "\n",
  "files.exclude": {
    "**/.devenv": true,
    "**/.direnv": true,
    "**/.git": true,
    "**/.task": true,
    "**/dist": true,
    "**/node_modules": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.devenv/**": true,
    "**/.direnv/**": true,
    "**/.git": true,
    "**/.task/**": true,
    "**/coverage/**": true,
    "**/dist/**": true,
    "**/node_modules/**": true,
    "**/out/**": true
  },
  "git.autofetch": true,
  "git.branchProtection": [
    "main",
    "master"
  ],
  "git.confirmSync": false,

  // ===========================
  // Git Settings
  // ===========================
  "git.enableSmartCommit": false,
  "git.inputValidationLength": 72,
  "git.inputValidationSubjectLength": 50,
  "githubPullRequests.fileListLayout": "tree",

  // ===========================
  // GitHub Pull Requests Settings
  // ===========================
  "githubPullRequests.pullBranch": "never",
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": true,

  // ===========================
  // GitLens Settings
  // ===========================
  "gitlens.hovers.currentLine.over": "line",
  "javascript.suggest.autoImports": true,

  // ===========================
  // JavaScript Settings
  // ===========================
  "javascript.updateImportsOnFileMove.enabled": "always",

  // ===========================
  // Markdownlint Settings
  // ===========================
  "markdownlint.config": {
    "extends": ".markdownlint.json"
  },

  // ===========================
  // Nix Settings
  // ===========================
  "nix.enableLanguageServer": true,
  "nix.formatterPath": "nixpkgs-fmt",
  "nix.serverPath": "nil",
  "prettier.configPath": ".prettierrc.json",
  "prettier.documentSelectors": [
    "**/*.{yml,yaml,md}"
  ],

  // ===========================
  // Prettier Settings (YAML/Markdown only)
  // ===========================
  "prettier.enable": true,

  // ===========================
  // Search Settings
  // ===========================
  "search.exclude": {
    "**/.devenv": true,
    "**/.direnv": true,
    "**/.task": true,
    "**/*.lock": true,
    "**/*.min.css": true,
    "**/*.min.js": true,
    "**/bun.lock": true,
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/out": true
  },
  "task.allowAutomaticTasks": "on",

  // ===========================
  // Task Settings
  // ===========================
  "task.autoDetect": "on",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.suggest.autoImports": true,

  // ===========================
  // TypeScript Settings
  // ===========================
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vitest.commandLine": "bun run vitest",

  // ===========================
  // Vitest Settings
  // ===========================
  "vitest.enable": true,
  "yaml.format.enable": true,
  "yaml.format.printWidth": 100,
  "yaml.format.singleQuote": false,

  // ===========================
  // YAML Settings
  // ===========================
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml",
    "https://taskfile.dev/schema.json": [
      "Taskfile.yml",
      "tasks/**/*.yml"
    ]
  }
}
