{
  "name": "TypeScript Library Template",
  "image": "ghcr.io/cachix/devenv:latest",
  "overrideCommand": false,
  "updateContentCommand": "devenv shell",
  "postCreateCommand": "direnv allow && devenv shell task install",
  "customizations": {
    "vscode": {
      "extensions": [
        // TypeScript
        "dbaeumer.vscode-eslint",
        "biomejs.biome",

        // Documentation
        "yzhang.markdown-all-in-one",
        "DavidAnson.vscode-markdownlint",

        // YAML/TOML
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",

        // Git
        "eamodio.gitlens",

        // Task
        "task.vscode-task",

        // Nix
        "jnoortheen.nix-ide"
      ],
      "settings": {
        "editor.defaultFormatter": "biomejs.biome",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "quickfix.biome": "explicit",
          "source.organizeImports.biome": "explicit"
        },
        "[markdown]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[yaml]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[toml]": {
          "editor.defaultFormatter": "tamasfe.even-better-toml"
        },
        "[nix]": {
          "editor.defaultFormatter": "jnoortheen.nix-ide"
        },
        "typescript.tsdk": "node_modules/typescript/lib",
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        }
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "mounts": [
    "source=${localWorkspaceFolder}/.devenv,target=${containerWorkspaceFolder}/.devenv,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    "DEVENV_RUNTIME": "${containerWorkspaceFolder}/.devenv"
  }
}
